<!--
    Receives JPEG webcam submission and saves to local file. File path:

        uploads/[date]-webcam-[ip].jpg
  -->
<?php
$filename = 'uploads/' . date('YmdHis') . '-webcam-' . $_SERVER['REMOTE_ADDR'] . '.jpg';
$result = file_put_contents($filename, file_get_contents('php://input'));
if (!$result) {
  print "ERROR: Failed to write data image file!\n";
  exit();
}

$url = 'http://' . $_SERVER['HTTP_HOST'] . dirname($_SERVER['REQUEST_URI']) . '/' . $filename;
print "$url\n";
?>
